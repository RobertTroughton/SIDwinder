{
  "name": "Raistlin Bars With Logo",
  "version": "1.0",
  "maxCallsPerFrame": 1,
  "barStyleType": "water",
  "colorPaletteType": "water",
  "colorEffectType": "waterlogo",
  "fontType": "1x2",

  "layouts": {
    "bank4000": {
      "binary": "prg/RaistlinBarsWithLogo-4000.bin",
      "baseAddress": "0x4000",
      "size": "0x4000",
      "dataAddress": "0x4000",
      "sysAddress": "0x4100",
      "binaryDataStart": "0x4000",
      "binaryDataEnd": "0x7FFF",
      "borderColor": "0x400D",
      "backgroundColor": "0x400E",
      "barCharsAddress": "0x7F00",
      "charsetAddress": "0x7800",
      "colorTableAddress": "0x5F80",
      "colorEffectModeAddress": "0x4060",
      "lineGradientColorsAddress": "0x4061",
      "songNameColorAddress": "0x406C",
      "saveRestoreLocation": "before",
      "saveRestoreEndAddress": "0x4000",
      "saveRestoreMaxSize": "0x3800"
    },
    "bank8000": {
      "binary": "prg/RaistlinBarsWithLogo-8000.bin",
      "baseAddress": "0x8000",
      "size": "0x4000",
      "dataAddress": "0x8000",
      "sysAddress": "0x8100",
      "binaryDataStart": "0x8000",
      "binaryDataEnd": "0xBFFF",
      "borderColor": "0x800D",
      "backgroundColor": "0x800E",
      "barCharsAddress": "0xBF00",
      "charsetAddress": "0xB800",
      "colorTableAddress": "0x9F80",
      "colorEffectModeAddress": "0x8060",
      "lineGradientColorsAddress": "0x8061",
      "songNameColorAddress": "0x806C",
      "saveRestoreLocation": "before",
      "saveRestoreEndAddress": "0x8000",
      "saveRestoreMaxSize": "0x7800"
    }
  },

  "inputs": [
    {
      "id": "bitmap-input",
      "label": "Bitmap Logo",
      "type": "file",
      "accept": ".png",
      "required": false,
      "default": "PNG/Logos/0-default.png",
      "description": "C64 format PNG image",
      "galleryFiles": [ "prg/galleries/logos.json" ],
      "gallery": [
        {
          "name": "Maniacs (by Peter van Triel)",
          "file": "PNG/Logos/petervantriel-maniacs.png"
        }
      ],
      "memory": {
        "bank4000": [
          {
            "name": "bitmap",
            "sourceOffset": "0x0002",
            "targetAddress": "0x6000",
            "size": "0xDC0"
          },
          {
            "name": "screen",
            "sourceOffset": "0x1F42",
            "targetAddress": "0x7000",
            "size": "0x01B8"
          },
          {
            "name": "color",
            "sourceOffset": "0x232A",
            "targetAddress": "0x7400",
            "size": "0x01B8"
          },
          {
            "name": "background",
            "sourceOffset": "0x2712",
            "targetAddress": "0x400E",
            "size": "0x0001"
          }
        ],
        "bank8000": [
          {
            "name": "bitmap",
            "sourceOffset": "0x0002",
            "targetAddress": "0xA000",
            "size": "0xDC0"
          },
          {
            "name": "screen",
            "sourceOffset": "0x1F42",
            "targetAddress": "0xB000",
            "size": "0x01B8"
          },
          {
            "name": "color",
            "sourceOffset": "0x232A",
            "targetAddress": "0xB400",
            "size": "0x01B8"
          },
          {
            "name": "background",
            "sourceOffset": "0x2712",
            "targetAddress": "0x800E",
            "size": "0x0001"
          }
        ]
      }
    }
  ],

  "options": [
    {
      "id": "font",
      "label": "Font",
      "type": "fontSelector",
      "default": 0
    },
    {
      "id": "barStyle",
      "label": "Bar Style",
      "type": "imageGrid",
      "default": 0,
      "values": [
        { "value": 0, "label": "Curved - Rounded with highlights", "shortLabel": "curved" },
        { "value": 1, "label": "Box - Full solid bars", "shortLabel": "box" },
        { "value": 2, "label": "Thin Box - Narrow 4-pixel bars", "shortLabel": "thin box" },
        { "value": 3, "label": "Outline - Hollow bars", "shortLabel": "outline" },
        { "value": 4, "label": "Doubles - Blocky pixel bars", "shortLabel": "doubles" },
        { "value": 5, "label": "Shine - Rounded without highlights", "shortLabel": "shine" },
        { "value": 6, "label": "Pointed - Pointed top", "shortLabel": "pointed" },
        { "value": 7, "label": "Dashed - Solid with scanlines", "shortLabel": "dashed" }
      ]
    },
    {
      "id": "colorEffect",
      "label": "Colour Effect",
      "type": "imageGrid",
      "default": 0,
      "values": [
        { "value": 0, "label": "Dynamic Pulse", "shortLabel": "Dynamic Pulse", "image": "PNG/Effects/effect-height.png" },
        { "value": 1, "label": "Fixed Gradient", "shortLabel": "Fixed Gradient", "image": "PNG/Effects/effect-gradient.png" },
        { "value": 2, "label": "Fixed Single Colour", "shortLabel": "Fixed Colour", "image": "PNG/Effects/effect-solid.png" }
      ]
    },
    {
      "id": "colorPalette",
      "label": "Colour Palette",
      "type": "imageGrid",
      "default": 0,
      "showWhen": { "colorEffect": [0, 1] },
      "values": [
        { "value": 0, "label": "Rainbow", "image": "PNG/Palettes/palette-rainbow.png" },
        { "value": 1, "label": "Fire", "image": "PNG/Palettes/palette-fire.png" },
        { "value": 2, "label": "Ice", "image": "PNG/Palettes/palette-ice.png" },
        { "value": 3, "label": "Forest", "image": "PNG/Palettes/palette-forest.png" },
        { "value": 4, "label": "Purple Haze", "image": "PNG/Palettes/palette-purplehaze.png" },
        { "value": 5, "label": "Ocean", "image": "PNG/Palettes/palette-ocean.png" },
        { "value": 6, "label": "Monochrome", "image": "PNG/Palettes/palette-mono.png" }
      ]
    },
    {
      "id": "barColor",
      "label": "Bar Colour",
      "type": "colorPicker",
      "default": 1,
      "showWhen": { "colorEffect": [2] }
    },
    {
      "id": "songNameColor",
      "label": "Song Name Colour",
      "type": "colorPicker",
      "default": 1
    },
    {
      "id": "bgColor",
      "label": "Background Colour",
      "type": "colorPicker",
      "default": 0
    }
  ]
}
