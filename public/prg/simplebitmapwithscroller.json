  "options": [
    {
      "id": "borderColor",
      "label": "Border Color",
      "type": "number",
      "default": 0,
      "min": 0,
      "max": 15,
      "dataField": "borderColor"
    },
    {
      "id": "scrollText",
      "label": "Scroll Text",
      "type": "textarea",
      "default": "SIDquake  ---  Your one-stop shop for all your SID visualisation needs!!       ",
      "maxLength": 6144,
      "dataField": "scrollTextAddr",
      "description": "Text that scrolls across the screen",
      "loadSave": true
    },
    {
      "id": "scrollColor",
      "label": "Scroll Color",
      "type": "number",
      "default": 1,
      "min": 0,
      "max": 15,
      "dataField": "scrollColor"
    }

  ]
