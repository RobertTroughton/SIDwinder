{
  "name": "Simple Bitmap",
  "maxCallsPerFrame": 6,
  "version": "1.0",

  "layouts": {
    "addr4000": {
      "binary": "prg/simplebitmap-4000.bin",
      "baseAddress": "0x4000",
      "dataAddress": "0x4000",
      "sysAddress": "0x4100",
      "borderColor": "0x400D",
      "backgroundColor": "0x400E"
    },
    "addrc000": {
      "binary": "prg/simplebitmap-C000.bin",
      "baseAddress": "0xC000",
      "dataAddress": "0xC000",
      "sysAddress": "0xC100",
      "borderColor": "0xC00D",
      "backgroundColor": "0xC00E"
    }
  },

  "inputs": [
    {
      "id": "koala",
      "label": "Koala Image",
      "type": "file",
      "accept": ".koa,.kla",
      "required": false,
      "default": "prg/default-picture.kla",
      "description": "C64 Koala format image (10001 bytes)",
      "memory": {
        "addr4000": [
          {
            "name": "bitmap",
            "sourceOffset": "0x0002",
            "targetAddress": "0x6000",
            "size": "0x1F40"
          },
          {
            "name": "screen",
            "sourceOffset": "0x1F42",
            "targetAddress": "0x5800",
            "size": "0x03E8"
          },
          {
            "name": "color",
            "sourceOffset": "0x232A",
            "targetAddress": "0x5C00",
            "size": "0x03E8"
          },
          {
            "name": "background",
            "sourceOffset": "0x2712",
            "targetAddress": "0x400E",
            "size": "0x0001"
          }
        ]
      }
    }
  ],

  "options": [
    {
      "id": "borderColor",
      "label": "Border Color",
      "type": "number",
      "default": 0,
      "min": 0,
      "max": 15,
      "dataField": "borderColor"
    }
  ]
}